BANKS=brou_personas,oca
HEADLESS=1
# Clave Fernet (generar con: python setup.py --generate-key)
CREDS_KEY=
SCHEDULE_HOURS=07:00,20:00
RANDOM_DELAY_MIN=30
TZ=America/Montevideo

# Configuración del Servidor HTTP Integrado
# El contenedor expone el JSON en http://localhost:HTTP_PORT/accounts.json
HTTP_PORT=8000
# Host/IP para construir URLs de logos en el JSON (ej: IP de tu servidor)
HTTP_HOST=192.168.1.100
# Lista de IPs permitidas (vacío = permite todo)
# ALLOWED_IPS=127.0.0.1,192.168.1.50
ALLOWED_IPS=

# Ruta interna donde se guarda el JSON (debe coincidir con la lógica del server)
OUTPUT_JSON=/app/data/accounts.json

# Configuración de Credenciales
# /dev/shm/creds -> RAM (Se borran al detener el contenedor) - MÁXIMA SEGURIDAD
# /app/data/creds -> Disco (Persisten si el volumen ./data está montado)
# Carpeta de credenciales
CREDENTIALS_DIRECTORY=/dev/shm/creds

# Habilitar logs detallados de geckodriver (1=si, 0=no)
# En Docker se recomienda dejar en 0 para evitar llenar el disco/logs.
GECKODRIVER_LOGS=0

